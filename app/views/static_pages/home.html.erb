<% provide :title, t("static_pages.title.home") %> <% if logged_in? %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info"><%= render "shared/user_info" %></section>
    <section class="micropost_form"><%= render "shared/micropost_form" %></section>
  </aside>
  <div class="col-md-8">
    <h3><%= t(".feed") %></h3>
    <%= render "shared/feed" %>
  </div>
</div>
<% else %>
<div class="center jumbotron">
  <h1><%= t("static_pages.home.welcome_quote") %></h1>
  <h2>
    <%= t "static_pages.home.dis1" %> <%= link_to t(".tutor") , Settings.urls.footer.tutorial %> <%=
    t "static_pages.home.dis2" %>
  </h2>
  <%= link_to t("static_pages.home.signupnow"), signup_path, class: "btn btn-lg btn-primary" %>
</div>
<%= link_to image_tag("Ruby-on-Rails-logo.png", alt: t(".logo"), width: "200px"),
Settings.urls.footer.tutorial %> <% end %>

<header class="navbar navbar-fixed-top navbar-inverse">
  <%= link_to "English", locale: :en %>
  <%= link_to "Vietnamese", locale: :vi %>
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.header.home"), root_path %></li>
        <li><%= link_to t("static_pages.header.help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("users.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("users.account") %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.profile"), current_user %></li>
              <li><%= link_to t("users.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("users.logout"), logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("static_pages.header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
